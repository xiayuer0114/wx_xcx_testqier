/* pages/live_home/live_home.wxss */
.search_view{
  width: 100%;
  height: 100rpx;
  position: fixed;
  top: 0;
  left: 0;

}
.main_view{
  width: 100%;
  height: auto;
  margin-top:100rpx;
}
.scroll_list_view{
  width: 100%;
  height: 1000rpx;
  /* border: 1rpx solid #333; */
}
.artcle_view_box{
  width: 100%;
  height: auto;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #ccc;
  margin-top: 10rpx;
}
.artcle_view{
  width: 95%;
  margin:0 auto;
  height: 160rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.artcle_img{
  width: 140rpx;
  height: 140rpx;
}
.artcle_desc{
  width: 78%;
  height: 140rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.artcle_title{
  font-size: 28rpx;
  color: #333;
}
.artcle_title_text{
   overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}
.artcle_info{
  font-size: 28rpx;
  color: #333;
  margin-top:25rpx;
}
.video_box{
  width: 100%;
  height: auto;
}
.video_view{
  width: 100%;
  height: 430rpx;
  margin-top: 10rpx;
  padding-bottom:10rpx;
  border-bottom: 1rpx solid #ccc;
}
.video_title{
  width: 95%;
  margin:0 auto;
  font-size: 33rpx;
  color: #333;
}
.my_video{
 
  width: 100%;
  height: 100%;
}

.title_view{
  width: 100%;
  height: 88rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  /* border-top:1rpx solid #626262; */
}
.title_img{
  width: 100%;
  height: 100%;
}
.table{
  width: 100%;
  height: 100rpx;
}
.c_view{
  width: 100%;
  height: 100%;
}
.c_img{
  width: 100%;
  height: 100%;
}
.artcle_info_text{
  overflow:hidden;  
  text-overflow:ellipsis;  
  display:-webkit-box;  
  -webkit-line-clamp:2;  
  -webkit-box-orient:vertical;  
}