.circle_point {
  width: 50rpx;
  height: 50rpx;
  border: 1rpx solid #ffd000;
  border-radius: 50%;
  z-index: 11;
  background-color: #fff;
  position: absolute;
  top: -20rpx;
}

.circle_point2 {
  width: 50rpx;
  height: 50rpx;
  border: 1rpx solid #ffd000;
  border-radius: 50%;
  z-index: 11;
  background-color: #fff;
  position: absolute;
  top: -20rpx;
  left: 100%;
}

.min_fee {
  font-size: 30rpx;
  color: #999;
  position: absolute;
  left: 0;
  top: 30rpx;
}

.max_fee {
  font-size: 30rpx;
  color: #999;
  position: absolute;
  right: 0rpx;
  top: 30rpx;
}

.getInfo-container {
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.2);
  z-index: 999;
  top: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.getinfo-view {
  display: flex;
  flex-direction: column;
  background: #fff;
  width: 65%;
  height: 28%;
  font-size: 30rpx;
  border-radius: 10rpx;
  padding: 23rpx;
  box-sizing: border-box;
}

.info-view {
  width: 100%;
  margin-top: 50rpx;
  display: flex;
  justify-content: flex-end;
}

.title_view {
  width: 100%;
  height: 88rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  border-top: 1rpx solid #626262;
}

.title_img {
  width: 100%;
  height: 100%;
}

.table {
  width: 100%;
  height: 88rpx;
  background-color: #fff;
}

.wenzhang_view_box {
  width: 100%;
  height: auto;
  margin-top: 20rpx;
}

.artcle_view_box {
  width: 100%;
  height: auto;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #ccc;
  margin-top: 10rpx;
}

.artcle_view {
  width: 95%;
  margin: 0 auto;
  height: 160rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.artcle_img {
  width: 140rpx;
  height: 140rpx;
}

.artcle_desc {
  width: 78%;
  height: 140rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.artcle_title {
  font-size: 28rpx;
  color: #333;
}
.artcle_title_text{
   overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}

.artcle_info {
  font-size: 28rpx;
  color: #333;
  /* margin-top: 25rpx; */
}

.artcle_info_desc {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.c_view {
  width: 100%;
  height: 100%;
}

.c_img {
  width: 100%;
  height: 100%;
}
