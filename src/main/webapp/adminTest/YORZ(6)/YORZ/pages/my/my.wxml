<!--三项列表  -->
<view class="three_list_view">
  <view class="list_item1" bindtap='toMyCollet' data-id="0">
      <image class="page_img" src='../../images/c1.png'></image>
    <view class="tabs">收藏</view>
  </view>
  <view class="list_item1" bindtap='toMyCollet' data-id="1">
      <image class="page_img" src='../../images/c3.png'></image>
